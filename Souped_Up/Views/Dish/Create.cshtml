@model Souped_Up.Models.DishViewCreateModel

@{
    ViewBag.Title = "Create";
}

<h2>Create a Dish</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h3>Name</h3>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div>
            <h3>Ingredients</h3>
            <div class="row">
                <div class="col-md-4">
                    <h6>Select Ingredients for this Dish</h6>
                    @Html.ListBoxFor(m => m.Ingredients, new
                   MultiSelectList(Model.IngredientData.OrderBy(c => c.Name), "Id", "Name",
                   Model.Ingredients), new { Multiple = "multiple", style = "width:250px;" })
                </div>
                <div class="col-md-3">
                    @Html.ActionLink("Create New Ingredient", "Create", "Ingredient")
                </div>
            </div>
            <br />
        </div>
        <div>
            <h3>Tags</h3>
            <div class="row">
                <div class="col-md-4">
                    <h6>Select Tags for this Dish</h6>
                    @Html.ListBoxFor(m => m.Tags, new
                     MultiSelectList(Model.TagData.OrderBy(c => c.Name), "Id", "Name",
                     Model.Tags), new { Multiple = "multiple", style = "width:250px;" })
                </div>
                <div class="col-md-3">
                    @Html.ActionLink("Create New Tag", "Create", "Tag")
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/kendo")
}


