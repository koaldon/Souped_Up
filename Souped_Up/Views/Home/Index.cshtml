@{
    ViewBag.Title = "Home Page";
}

<style>
    .jumbotron {
        background-image: url(../../Content/Assets/background.jpg);
        background-size: cover;
    }

        .jumbotron h1 {
            font-family: 'Freestyle Script';
            font-size: 150px;
            position: relative;
            left: 575px;
            top: 10px;
        }

        .jumbotron p {
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            font-size: 20px;
            position: relative;
            left: 675px;
        }

    .card-img-top {
        width: 250px;
        height: 150px;
    }
</style>

<div class="jumbotron">
    <h1>Souped-Up</h1>
    <p class="lead">Meal planning made easy.</p>
</div>


<div class="card-deck ">
    <div class="col-md-6">
        <div class="card text-center" style="width:275px">
            <img src="~/Content/Assets/Meal.jpg" class="card-img-top" alt="Meal Image" />
            <div class="card-body">
                <h4 class="card-title">View your Meals</h4>
                <p class="card-text">Create, Edit, Delete, or find more information about your meals!</p>
                @Html.ActionLink("View Meals", "Index", "Meal", null, new { @class = "btn btn-primary btn-large" })
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card text-center" style="width:275px">
            <img src="~/Content/Assets/Dish.jpg" class="card-img-top" alt="Dish Image" />
            <div class="card-body">
                <h4 class="card-title">View your Dishes</h4>
                <p class="card-text">Create, Edit, Delete, or find more information about your dishes!</p>
                @Html.ActionLink("View Dishes", "Index", "Dish", null, new { @class = "btn btn-primary btn-large" })
            </div>
        </div>
    </div>
    <br />

    <div class="col-md-6">
        <div class="card text-center" style="width:275px">
            <img src="~/Content/Assets/Ingredient.jpg" class="card-img-top" alt="Ingredient Image" />
            <div class="card-body">
                <h4 class="card-title">View your Ingredients</h4>
                <p class="card-text">Create, Edit, Delete, or find more information about your ingredients!</p>
                @Html.ActionLink("View Ingredients", "Index", "Ingredient", null, new { @class = "btn btn-primary btn-large" })
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card text-center" style="width:275px">
            <img src="~/Content/Assets/Tags.jpg" class="card-img-top" alt="Tag Image" />
            <div class="card-body">
                <h4 class="card-title">View your Tags</h4>
                <p class="card-text">Create, Edit, Delete, or find more information about your tags!</p>
                @Html.ActionLink("View Tags", "Index", "Tag", null, new { @class = "btn btn-primary btn-large" })
            </div>
        </div>
    </div>
</div>

